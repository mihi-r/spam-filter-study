{
  "name": "spam-filter-study",
  "version": "1.0.0",
  "description": "A project to rank popular spam filters",
  "main": "gulpfile.js",
  "scripts": {
    "build": "./node_modules/.bin/gulp",
    "start": "./node_modules/.bin/gulp ; node ./build/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mihi-r/spam-filter-study.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mihi-r/spam-filter-study/issues"
  },
  "homepage": "https://github.com/mihi-r/spam-filter-study#readme",
  "devDependencies": {
    "@types/json2csv": "^5.0.1",
    "@types/node": "^14.14.28",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "typescript": "^4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript",
      "./tsconfig.json"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/no-throw-literal": 0,
      "@typescript-eslint/indent": 0,
      "import/no-unresolved": 0,
      "indent": [
        "error",
        4
      ],
      "import/prefer-default-export": 0,
      "import/no-default-export": [
        "error"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "bad-words": "^3.0.4",
    "google-profanity-words": "^1.0.0",
    "leo-profanity": "^1.3.0",
    "retext-english": "^3.0.4",
    "retext-profanities": "^6.1.0",
    "retext-stringify": "^2.0.4",
    "spamc": "0.0.5",
    "to-vfile": "^6.1.0",
    "unified": "^9.2.1",
    "vfile-reporter": "^6.0.2",
    "csv-parser": "^3.0.0",
    "json2csv": "^5.0.6",
    "spam-detection": "^1.0.3"
  }
}
